<div class="mx-auto flex min-h-screen w-full items-center justify-center bg-gray-900 text-white">
  <div class="flex flex-col space-y-10">
    <h2 class="text-center text-4xl font-medium">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "flex w-[30rem] flex-col space-y-5"}) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none"  %>
      </div>

      <div class="field w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password",class: "w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none"  %>
      </div>

      <div class="field w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password confirmation", class: "w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none"  %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "w-full transform rounded-sm bg-indigo-600 py-2 font-bold duration-300 hover:bg-indigo-400" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>