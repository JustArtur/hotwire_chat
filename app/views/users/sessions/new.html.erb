<div class="mx-auto flex min-h-screen w-full items-center justify-center bg-gray-900 text-white">
  <div class="flex w-[30rem] flex-col space-y-10">
    <div class="text-center text-4xl font-medium">Log In</div>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "flex w-[30rem] flex-col space-y-5"}) do |f| %>
      <div class="field w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
        <%# <%= f.label :email %>
        <%= f.email_field :email,  placeholder: "Email",autofocus: true, autocomplete: "email", class: "w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" %>
      </div>

      <div class="field w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
        <%# <%= f.label :password %>
        <%= f.password_field :password,  placeholder: "Password",autocomplete: "current-password", class: "w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: "w-full transform rounded-sm bg-indigo-600 py-2 font-bold duration-300 hover:bg-indigo-400" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>